.marquee-horizontal2 {
    display: flex;
    overflow: hidden;
    width: 100%;
    white-space: nowrap;
    justify-content: flex-start;
    -webkit-box-align: center;
    align-items: center;
}

.track-horizontal2 {
    position: relative;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    white-space: nowrap;
    will-change: transform;
    animation: marquee-horizontal 15s linear infinite;
}

.slides {
    box-sizing: border-box;
    padding-right: 0.3em;
    padding-left: 0.3em;
    -webkit-box-flex: 0;
    flex: 0 0 auto;
}

@keyframes marquee-horizontal {
    from {
        transform: translateX(0);
    }

    to {
        transform: translateX(-66.8%);
    }
}

p {
    font-size: 150%;
    text-align: center;
    font-family: "Palatino Linotype", serif;
    font-weight: bold;
}

h1 {
    font-size: 45px;
}

.category {
    background-color: #FCBAAD;
    padding: 15px 10px;
    bottom: 4rem;
}

.container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50%;
    margin-bottom: 5rem;
}

.zoom-image {
    overflow: hidden;
    transition: transform 0.3s;
    margin: 10;
}

.zoom-image img {
    width: 45vh;
    height: auto;
    transition: transform 0.3s;
    display: block;
    margin: 0.5rem;
}

.zoom-image:hover {
    transform: scale(1.1);
}

.category2 {
